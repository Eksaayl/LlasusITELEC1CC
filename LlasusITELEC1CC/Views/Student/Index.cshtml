@{
}
@model IEnumerable<LlasusITELEC1CC.Models.Student>
<h1>Student List</h1>

<table class="table table-dark">

    <tr>
        <th colspan="8">Student</th>
    </tr>

    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Course</td>
        <td>Admission</td>
        <td>Email</td>
        <td>GPA</td>
        <td></td>
        <td></td>
    </tr>
    <tr>
        @foreach (var Student in Model)
        {
        <tr>
            <td>@Student.Id </td>
            <td>@Student.Name </td>
            <td>@Student.Course </td>
            <td>@Student.Admission </td>
            <td>@Student.Email </td>
            <td>@Student.GPA </td>
            <td><a asp-action="ShowDetail" asp-route-id="@Student.Id">Show Details</a></td>
            <td><a asp-action="UpdateStudent" asp-route-id="@Student.Id">Update</a></td>
        </tr>
        }
</table>

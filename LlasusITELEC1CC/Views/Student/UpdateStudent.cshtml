@{
}
@model Student;

<h1>Update Student</h1>

<form aps-action="UpdateStudent" asp-controller="Student" method="post">
    <div class="form-group">
        <label hidden asp-for="Id">Student ID</label>

        <input class="form-control" hidden asp-for="Id">

    </div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name">

    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email">

    </div>

    <div class="form-group">
        <label asp-for="Course">Course</label>
        <select class="form-control" asp-for="Course" asp-items="@Html.GetEnumSelectList(typeof(Course))"></select>
    </div>

    <div class="form-row align-items-center">
        <div class="col-sm-3 my-1">
            <label class="sr-only" for="inlineFormInputGPA">GPA</label>
            <input type="text" class="form-control" id="inlineFormInputGPA">
        </div>
   </div>
        <div class="form-group">
            <label asp-for="Admission">Date Enrolled</label>
            <input class="form-control" asp-for="Admission">

        </div>
     
        <button type="submit" class="btn btn-primary">Update</button>
        <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
</form>